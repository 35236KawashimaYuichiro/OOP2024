<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="名前:" VerticalAlignment="Center" Width="60"/>
                <TextBox x:Name="NameTextBox" Width="200" Margin="3"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="電話番号:" VerticalAlignment="Center" Width="60"/>
                <TextBox x:Name="PhoneTextBox" Width="200" Margin="3"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="住所:" VerticalAlignment="Center" Width="60"/>
                <TextBox x:Name="AddressTextBox" Width="200" Margin="3"/>
            </StackPanel>

            <Button Content="Save" x:Name="SaveButton" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Read" x:Name="ReadButton" Click="ReadButton_Click" Margin="5"/>

            <ListView x:Name="CustomerListView" Margin="0,5,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Id}" />
                            <TextBlock Text="{Binding Name}" FontSize="20"/>
                            <TextBlock Text="{Binding Phone}" Foreground="Aqua"/>
                            <TextBlock Text="{Binding Address}" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
